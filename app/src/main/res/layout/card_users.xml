<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_22dp"
    app:strokeColor="#D8BFD8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatarUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_netology" />

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/radioButton"
            app:layout_constraintStart_toEndOf="@+id/avatarUser"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/posts.json/data/author" />

        <TextView
            android:id="@+id/loginUser"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toStartOf="@id/radioButton"
            app:layout_constraintStart_toEndOf="@id/avatarUser"
            app:layout_constraintTop_toBottomOf="@+id/nameUser"
            tools:text="@sample/posts.json/data/loginUser" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="avatarUser,nameUser,loginUser" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>