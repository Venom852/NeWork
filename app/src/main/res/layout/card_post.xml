<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.FeedFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_22dp"
        app:strokeColor="#D8BFD8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardPostConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/author"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/published"
                app:layout_constraintEnd_toStartOf="@id/menu"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@id/cardPostConstraint"
                tools:text="@sample/posts.json/data/author" />

            <TextView
                android:id="@+id/published"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_8dp"
                app:layout_constraintBottom_toBottomOf="@id/avatar"
                app:layout_constraintEnd_toStartOf="@+id/menu"
                app:layout_constraintStart_toEndOf="@id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/author"
                tools:text="@sample/posts.json/data/published" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_netology" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu"
                style="@style/App.Widget.MenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu"
                app:icon="@drawable/ic_menu_24"
                app:iconTint="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/headerBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:barrierMargin="@dimen/_16dp"
                app:constraint_referenced_ids="avatar, published" />

            <TextView
                android:id="@+id/content"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playSong"
                tools:text="@string/previewTitle" />

            <TextView
                android:id="@+id/link"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content"
                tools:text="@sample/posts.json/data/previewLink" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/like"
                style="@style/App.Widget.LikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:checkable="true"
                android:contentDescription="@string/like"
                android:textColor="#663399"
                app:icon="@drawable/ic_like_selector_24"
                app:iconPadding="4dp"
                app:iconTint="#663399"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/link"
                tools:text="34" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/toShare"
                style="@style/App.Widget.ShareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:checkable="true"
                android:contentDescription="@string/toShare"
                android:textColor="#663399"
                app:icon="@drawable/ic_shared_24"
                app:iconPadding="4dp"
                app:iconTint="#663399"
                app:layout_constraintStart_toEndOf="@id/like"
                app:layout_constraintTop_toBottomOf="@+id/link"
                tools:text="13" />

            <VideoView
                android:id="@+id/videoContent"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:contentDescription="@string/videoContent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerBarrier"
                app:srcCompat="@drawable/ic_nature_24"
                tools:text="@sample/posts.json/data/content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/playVideo"
                style="@style/App.Widget.MenuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/play"
                android:padding="@dimen/_0dp"
                app:icon="@drawable/ic_play_selector"
                app:iconSize="90dp"
                app:iconTint="#000000"
                app:layout_constraintBottom_toBottomOf="@id/videoContent"
                app:layout_constraintEnd_toEndOf="@id/videoContent"
                app:layout_constraintStart_toStartOf="@id/videoContent"
                app:layout_constraintTop_toTopOf="@id/videoContent" />

            <ImageView
                android:id="@+id/imageContent"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:autoLink="all"
                android:contentDescription="@string/ImageContent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/videoContent"
                tools:srcCompat="@drawable/ic_nature_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/playSong"
                style="@style/App.Widget.PlayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="304dp"
                android:checkable="true"
                android:contentDescription="@string/play"
                android:padding="@dimen/_0dp"
                app:icon="@drawable/ic_play_selector"
                app:iconSize="65dp"
                app:iconTint="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageContent" />

            <TextView
                android:id="@+id/titleSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/playSong"
                app:layout_constraintTop_toBottomOf="@id/imageContent"
                tools:text="@sample/posts.json/data/titleSong" />

            <TextView
                android:id="@+id/timeSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageContent"
                tools:text="4:13" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="videoContent,playVideo" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="playSong,titleSong,timeSong" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="author,published,content,cardPostConstraint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</ScrollView>